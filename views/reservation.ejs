  <!-- ======= Book A Table Section ======= -->
    <section id="book-a-table" class="book-a-table">
      <div class="container">

        <div class="section-title">
          <h2>Reservation<span>Table</span></h2>
          <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
        </div>

        <form action="reservation/store" method="post" class="card p-3 shadow">
          <div class="row d-flex justify-content-center">
            <div class="col-lg-4 col-md-6 form-group">
                <label for="name_order">Nama Pemesan</label>
                <input type="text" name="name_order" class="form-control" id="name" placeholder="masukkan nama.." data-rule="minlen:4">
                <div class="validate"></div>
            </div>
            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                <label for="date_order">Tanggal Pesan</label>
                <input type="date" class="form-control" name="date_order" id="date_order">
                <div class="validate"></div>
            </div>
            <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                <label for="table_type">Jenis Paket Meja</label>
                <select type="text" name="table_type" id="table_type" class="form-control">
                    <option value="Paket 1">Paket 1</option>
                    <option value="Paket 2">Paket 2</option>
                    <option value="Paket 3">Paket 3</option>
                </select>
                <div class="validate"></div>
            </div>
            <div class="col-lg-4 col-md-6 form-group mt-3">
                <label for="person_count">Jumlah Orang</label>
                <input type="number" class="form-control" name="person_count" id="person_count" placeholder="masukkan jumlah.." data-rule="minlen:4">
                <div class="validate"></div>
            </div>
          </div>
          <div class="form-group mt-3">
            <label for="addition_message">Pesan Tambahan</label>
            <textarea class="form-control" id="addition_message" name="addition_message" rows="5" placeholder="masukkan pesan.."></textarea>
            <div class="validate"></div>
          </div>
          <!-- <div class="mb-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
          </div> -->
          <div class="text-center"><button type="submit">Submit Reservation</button></div>
        </form>
      </div>
    </section>
